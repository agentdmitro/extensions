{
	"manifest_version": 3,
	"name": "Link Inspector Pro",
	"version": "1.0.0",
	"description": "Inspect UTM parameters, anchor sections, and popup triggers on any link",
	"permissions": ["activeTab", "storage", "scripting"],
	"action": {
		"default_popup": "popup/popup.html",
		"default_icon": {
			"16": "icons/icon16.png",
			"48": "icons/icon48.png",
			"128": "icons/icon128.png"
		}
	},
	"icons": {
		"16": "icons/icon16.png",
		"48": "icons/icon48.png",
		"128": "icons/icon128.png"
	},
	"commands": {
		"toggle-overlay": {
			"suggested_key": {
				"default": "Alt+L"
			},
			"description": "Toggle link overlay mode"
		},
		"_execute_action": {
			"suggested_key": {
				"default": "Alt+Shift+L"
			},
			"description": "Open Link Inspector popup"
		}
	},
	"background": {
		"service_worker": "background.js"
	},
	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"js": ["modules/utmParser.js", "modules/anchorInspector.js", "modules/popupDetector.js", "modules/tooltipManager.js", "content/contentScript.js"],
			"css": ["content/tooltip.css"],
			"run_at": "document_idle"
		}
	]
}
